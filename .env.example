# Azure Speech Service (Optional - for cloud transcription)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_region_here

# Transcription Settings
TRANSCRIPTION_MODE=whisper  # Options: chrome, whisper, azure
WHISPER_MODEL=base  # Options: tiny, base (RECOMMENDED for English), small, medium, large
WHISPER_LANGUAGE=en  # English only - optimized for speed and performance
WHISPER_TASK=transcribe  # Options: transcribe

# Audio Settings
SAMPLE_RATE=16000
CHANNELS=1  # Mono for better transcription
CHUNK_SIZE=1024
